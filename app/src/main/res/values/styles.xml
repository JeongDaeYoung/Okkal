<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabBackground">@drawable/shape_tabs</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/GuideUnselectedTabText</item>
        <item name="tabSelectedTextAppearance">@style/GuideSelectedTabText</item>
    </style>

    <style name="GuideUnselectedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nanumgothic_light</item>
    </style>

    <style name="GuideSelectedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nanumgothic_bold</item>
    </style>

</resources>