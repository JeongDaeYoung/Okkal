<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners
                    android:radius="20dp"/>
            <padding
                    android:top="4px"
                    android:left="4px"
                    android:bottom="4px"
                    android:right="4px"/>
        </shape>
    </item>
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners
                android:radius="20dp"/>
            <padding
                    android:top="-2px"
                    android:left="-2px"
                    android:bottom="4px"
                    android:right="-2px"/>

            <solid android:color="@color/dark_gray" />
        </shape>
    </item>

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners
                android:radius="20dp"/>
            <padding
                android:top="2px"
                android:left="2px"
                android:bottom="2px"
                android:right="2px"/>

            <solid android:color="@color/gray" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="@color/light_beige" />
        </shape>
    </item>

</layer-list>